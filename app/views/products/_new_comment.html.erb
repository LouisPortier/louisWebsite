<div class="addReview">
  <% if signed_in? %>
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
      <p>
        <%= f.label :body, "Comments" %>
        <%= f.text_area :body, class: "form-control" %>
      </p>
      <p>
        <%= f.label :rating %>
        <%= f.text_field :rating, class: "rating form-control" %>
      </p>  
      <p>
        <%= f.submit "Submit" %>
      </p>
    <% end %>
  <% end %>
</div>